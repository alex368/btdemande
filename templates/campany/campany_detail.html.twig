{% extends 'base.html.twig' %}

{% block title %}Hello CustomerDatasheetController!
{% endblock %}

{% block body %}


	<!-- Contenu principal à droite -->
	<main
		class="col-md-12 col-lg-12 p-2">
		<!-- Contenu principal à gauche -->

		<h1 class="form-label text-center bebas text-color-blue mb-5 mt-5">FICHE ENTREPRISE</h1>


		<div class="container ">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="{{path('app_me_campany',{id:user})}}">Entreprise</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Fiche</li>
				</ol>
			</nav>


			{# {% for user in campanies.customer %}
			{{ dump(user.id) }}
			{% endfor %} #}

			<div
				class="card shadow-sm rounded-0 border-0 p-4 text-center" style="max-width: 1200px;">

				<!-- Logo -->
				<div class="mb-3 text-center">
					<img src="{{ asset('uploads/logos/' ~ campanies.logo) }}" alt="Logo Entreprise" width="90" class="company-logo rounded bg-white">
				</div>


				<!-- Nom -->
				<h5 class="fw-bold mb-4">{{campanies.legalName}}</h5>

				<!-- Infos entreprise -->
				<table class="table company-info border-1">
					<tbody>
						<tr>
							<td class="fw-bold">SIREN :</td>
							<td>{{campanies.siren}}</td>
						</tr>
						<tr>
							<td class="fw-bold">Secteur :</td>
							<td>{{campanies.sector}}</td>
						</tr>
						<tr>
							<td class="fw-bold">Forme juridique :</td>
							<td>Bientôt</td>
						</tr>
						<tr>
							<td class="fw-bold">Date de création :</td>
							<td>{{ campanies.creationDate|date('d/m/Y') }}</td>
						</tr>
						<tr>
							<td class="fw-bold">Capital social :</td>
							<td>bientôt</td>
						</tr>
					</tbody>
				</table>

				<!-- Bouton -->
				<div class="mt-3">
					<a href="{{ path('app_roadmap',{id:user})}}" class="btn btn-roadmap fw-bold px-5 py-2 shadow-sm rounded-0" style="background-color:#FBBB3B; color:#fff;">
						Roadmap
					</a>
				</div>
			</div>


			<div class="card shadow-sm rounded-0 border-0 mt-5">
				<div class="card-header bg-white fw-bold">
					Historique de financement
				</div>
				<div class="table-responsive">
					<table class="table  align-middle mb-0">
						<thead class="table-primary text-white">

							<tr>
								<th>Produit</th>
								<th>Montant</th>
								<th>status</th>
								<th>Détail</th>
							</tr>

						</thead>

						<tbody>

							{% for requestDemand in requestDemands %}
								<tr>

									<td>{{requestDemand.product.name}}</td>
									<td>{{ requestDemand.amount|number_format(0, ',', ' ') }}&nbsp;€</td>
									<td>{{requestDemand.status}}</td>
									<td class="text-center">
										<a href="{{path('app_document_index',{id:requestDemand.id})}}">
											<i class="bi bi-chevron-right"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>


	</main>
{% endblock %}
