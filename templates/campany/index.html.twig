{% extends 'base.html.twig' %}

{% block title %}Hello CampanyController!{% endblock %}

{% block body %}
	<main class="col-md-12 col-lg-12 p-2">
		<!-- Contenu principal à gauche -->
		<h1 class="form-label text-center bebas text-color-blue mb-5 mt-5">Entreprise</h1>
		<div class="container ">
			<div class="d-flex justify-content-between align-items-center mb-4 mt-5"></div>
			<div class="card shadow-sm rounded-0 border-0 mt-5">
				<div class="card-header bg-white fw-bold">
					FICHE ENTREPRISE
				</div>
				<div class="table-responsive">
					<table class="table  align-middle mb-0">
						<thead class="table-primary text-white">

							<tr>
								<th>Raison social</th>
								<th>Secteur</th>
								<th>Adresse</th>
								<th>SIREN</th>
								<th>Stade</th>
								<th>Date de création</th>
								<th>Détail</th>
							</tr>
						</thead>

						<tbody>

							{% for campany in users.campanies %}
								<tr>
									<td>{{ campany.legalName }}</td>
									<td>{{ campany.sector }}</td>
									<td>{{ campany.adress }}</td>
									<td>{{ campany.siren }}</td>
									<td>{{ campany.stage }}</td>
									<td>{{ campany.creationDate|date('d/m/Y') }}</td>
									<td class="text-center">
										<a href="{{path('app_campany',{id:campany.id, user: users.id})}}" class="bi bi-chevron-right"></a>
									</td>
								</tr>
							{% endfor %}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
