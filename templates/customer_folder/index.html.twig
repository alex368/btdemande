{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<body>   
                    <!-- Contenu principal à droite -->
                    <main class="col-md-9 col-lg-10 p-2">
                        <!-- Contenu principal à gauche -->

                        <h1 class="form-label text-center bebas text-color-blue mb-5 mt-5">Entreprise</h1>
                        

                        <div class="container ">
                            <div class="card shadow-sm rounded-0 border-0 mt-5">
                                <div class="card-header bg-white fw-bold">
                                    Mes dossiers
                                </div>
                                <div class="table-responsive">
                                    <table class="table  align-middle mb-0">
                                        <thead class="table-primary text-white">

                                            <tr>
                                                <th>Entreprise</th>
                                                <th>Montant</th>
                                                <th>Produit</th>
                                                <th>Status</th>
                                                <th>Détail</th>
                                            </tr>
                                        </thead>

                                        <tbody> 
                                         {% for find in findRequest %}
                                            <tr>                                                                          
                                                <td>{{find.campany.legalName}}</td>
                                                <td>{{find.amount}} euros</td>
                                                <td>{{find.product.name}}</td>
                                                <td>{{find.status}}</td>
                                                <td class="text-center"><a href="{{ path('app_document_index', { id: find.id }) }}" class="bi bi-chevron-right"></a></td>                                        
                                            </tr>
                                               {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>




                    </main>




                </div>
            </div>






            <!-- Script Bootstrap JS (avec Popper inclus) -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
                // Bar Chart - Dépense/Revenue
               

                // Pie Chart - Répartition
                const pieCtx = document.getElementById('pieChart').getContext('2d');
                new Chart(pieCtx, {
                    type: 'pie',
                    data: {
                        labels: ['bpifrance', 'lcl', 'cic', 'créalia', 'Iniative'],
                        datasets: [{
                            data: [15, 30, 20, 15, 20],
                            backgroundColor: ['#FBBB3B', '#272E80', '#038B92', '#038BC2', '#E7226F']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'right',
                                labels: {
                                    usePointStyle: true,
                                    pointStyle: 'circle'
                                }
                            }
                        }
                    }

                });
            </script>
</body>
{% endblock %}
