{% extends 'base.html.twig' %}

{% block title %}Hello FunderController!{% endblock %}

{% block body %}
  <main class="col-md-12 col-lg-12 p-2">
<div class="container mt-5">
      <h1 class="form-label text-center bebas text-color-blue mb-5 mt-5">Ajouter un document personnalis√© pour la demande</h1>

   {{ form_start(form) }}
            {{ form_row(form.logo) }}
            {{ form_row(form.name) }}
            {{ form_row(form.sector) }}
            {{ form_row(form.type) }}
            {{ form_row(form.description, {
                'attr': {
                    'class': 'wysiwyg',
