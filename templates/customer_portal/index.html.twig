{% extends 'base.html.twig' %}

{% block title %}Hello CustomerPortalController!
{% endblock %}

{% block body %}
	<body>
		<!-- Contenu principal à droite -->
		<main
			class="col-md-9 col-lg-10 p-2">
			<!-- Contenu principal à gauche -->

			<h1 class="form-label text-center bebas text-color-blue mb-5 mt-5">Portail client</h1>


			<div class="container ">

				<div class="d-flex justify-content-center">
					<form method="get" class="mb-4">
						<div class="input-group mx-auto" style="max-width: 800px;">
							<span class="input-group-text bg-white border-end-0">
								<i class="bi bi-search text-muted"></i>
							</span>
							<input type="text" name="search" class="form-control border-start-0" placeholder="Search..." value="{{ search }}">
						</div>
					</form>
				</div>


				<div class="card shadow-sm rounded-0 border-0 mt-5">
					<div class="card-header bg-white fw-bold">
						Clients
					</div>
					<div class="table-responsive">
						<table class="table  align-middle mb-0">
							<thead class="table-primary text-white">
								<tr>
									<th>Nom</th>
									<th>Prénom</th>
									<th>Numéro</th>
									<th>Détail</th>
								</tr>
							</thead>

							<tbody>
								{% for customer in pagination %}

									<tr>
										<td>{{customer.name}}</td>
										<td>{{customer.lastname}}</td>
										<td>{{customer.number}}</td>
										<td>
											<i>
												<a href="{{path('app_customer_datasheet',{id: customer.id})}}" class="bi bi-chevron-right"></a>
											</i>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						{{ knp_pagination_render(pagination) }}
					</div>
				</div>
			</div>
		</main>
	</body>
</div></div></body>{% endblock %}
