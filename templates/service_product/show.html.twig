{% extends 'base.html.twig' %}

{% block title %}Funder Details{% endblock %}

{% block body %}
<div class="container mt-4">


    <h1 class="mb-4">Funder Details</h1>

    <div class="card">
        <div class="card-body">

            <table class="table table-bordered">
                <tr>
                    <th>Titre</th>
                    <td>{{ services.title }}</td>
                </tr>

                <tr>
                    <th>Description</th>
                    <td>{{ services.description }}</td>
                </tr>

                <tr>
                    <th>Prix</th>
                    <td>{{ services.price }}</td>
                </tr>

               
            </table>

            <div class="d-flex gap-2 mt-3">
                <a href="{{ path('app_service_product') }}" class="btn btn-secondary">Back</a>
                <a href="{{ path('app_service_product_edit', { id: services.id }) }}" class="btn btn-warning">Edit</a>

                <form method="post"
                      action="{{ path('app_service_product_delete', { id: services.id }) }}"
                      onsubmit="return confirm('Are you sure you want to delete this funder ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ services.id) }}">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>

        </div>
    </div>

</div>
{% endblock %}
