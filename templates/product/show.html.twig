{% extends 'base.html.twig' %}

{% block title %}Produit : {{ product.name }}{% endblock %}

{% block body %}
<main class="col-md-9 col-lg-10 p-2">

    <div class="card shadow-sm rounded-0 border-0 p-5 text-center"
         style="max-width: 1200px; width: 100%; min-height: 600px;">

        <!-- Logo -->
        <a href="#" class="d-flex justify-content-center align-items-center mb-4 text-decoration-none">
            <img src="https://hellowilla.co/wp-content/uploads/2020/06/BPIFrance-logo.png"
                 alt="Logo" width="150">
        </a>

        <!-- Titre principal -->
        <h1 class="mb-3">{{ product.name }}</h1>

        <!-- Description -->
        <div class="mb-5">
            <h3 class="text-start">Description</h3>
            <p class="fs-5 fw-light text-body-secondary text-start">
                {{ product.productDescription }}
            </p>
        </div>
{# {% if is_granted('ROLE_COLLABORATOR') and is_granted('ROLE_ADMIN') %} #}
        <!-- Documents associés -->
        <div class="mb-5 text-start">
            <h3>Documents associés</h3>
            <ul class="list-group">
                {% for document in product.documentTemplates %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ document.template }}
                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ asset('uploads/documents/' ~ document.template) }}"
                           download>
                            Télécharger
                        </a>
                    </li>
                {% else %}
                    <li class="list-group-item text-muted">Aucun document associé.</li>
                {% endfor %}
            </ul>
        </div>
{# {% endif %} #}
        <!-- Bouton retour -->
        <div class="text-start">
            <a href="{{ path('app_product') }}" class="btn btn-secondary">
                ← Retour à la liste
            </a>
        </div>

    </div>
</main>
{% endblock %}
