            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
    document.addEventListener('DOMContentLoaded', function () {

        // 1. Récupération des données Twig
        const requests = [
            {% for request in requests %}
            {
                name: "{{ request.product.name|e('js') }}",
                amount: {{ request.amount }}
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        ];

        // 2. Regroupement des montants par financeur
        const financeurs = {};
        requests.forEach(item => {
            if (financeurs[item.name]) {
                financeurs[item.name] += item.amount;
            } else {
                financeurs[item.name] = item.amount;
            }
        });

        // 3. Préparation des données pour Chart.js
        const labels = Object.keys(financeurs);
        const data = Object.values(financeurs);

        // 4. Couleurs (adaptables)
        const backgroundColors = [
            '#FBBB3B',
            '#272E80',
            '#038B92',
            '#038BC2',
            '#E7226F',
            '#6F42C1',
            '#198754'
        ];

        // 5. Initialisation du graphique
        const pieCtx = document.getElementById('pieChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: backgroundColors.slice(0, labels.length)
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            usePointStyle: true,
                            pointStyle: 'circle'
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return context.label + ' : ' + context.raw + ' €';
                            }
                        }
                    }
                }
            }
        });
    });
</script>

