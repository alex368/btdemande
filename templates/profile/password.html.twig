{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <div class="col-md-9 col-lg-10 p-4" style="height: 100vh; overflow-y: auto;">







<div class="container py-5">

    <div class="text-center mb-5">
      <img src="{{ asset('image/logo.png') }}" alt="logo" width="70">
      <h3 class="mt-3 text-success fw-bold text-uppercase">Mon compte</h3>
    </div>

    <h2 class="mb-4 text-center">Modifier mot de passe</h2>

{{ form_start(form, {
    'attr': {
        'class': 'mx-auto',
        'style': 'max-width: 600px;'
    },
    'action': path('app_profile_password', {
        id: app.user.id
    }),
    'method': 'POST'
}) }}

<div class="mb-3">
    {{ form_label(form.password.first) }}
    {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.password.first) }}
</div>

<div class="mb-3">
    {{ form_label(form.password.second) }}
    {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.password.second) }}
</div>

